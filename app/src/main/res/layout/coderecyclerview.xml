<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/codeConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/chatlistbackground"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="-20dp"
    android:paddingRight="16dp"
    android:paddingBottom="-10dp">


    <LinearLayout
        android:id="@+id/codeLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codeLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/codeProfilePic"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundprofilepiccontact"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.005"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <LinearLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="60dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@id/codeProfilePic"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/codeMessageSender"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/chivoregular"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="S"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/codeArrowimageView"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/codeMessageSender"
                   app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/rightarrowicon"/>

                <TextView
                    android:id="@+id/codeMessageReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/chivoregular"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Rejj"
                    android:gravity="center|end"
                    android:textColor="#000000"
                    android:textSize="16sp" />

<!--                <TextView-->
<!--                    android:id="@+id/textView9"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:layout_marginEnd="10dp"-->
<!--                    android:layout_alignParentTop="true"-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_alignRight="@+id/codeMessageReceiver"-->
<!--                    android:layout_weight="1"-->
<!--                    android:fontFamily="@font/chivoregular"-->
<!--                    android:text="more"-->
<!--                    android:textColor="#C1A0EE"-->
<!--                    android:textSize="12dp"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/codeMessagetextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="0.2"
                                android:fontFamily="@font/chivoregular"
                                android:text="more..."
                                android:textColor="#C1A0EE"
                                android:textSize="12dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/codeTimeOfMessagetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Time of sending"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
